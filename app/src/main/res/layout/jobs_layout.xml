<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@color/custom_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/background_white_simple2"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/companyImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp"
            android:src="@color/blue1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationY="-15dp"
            android:background="@drawable/background_white_rouded_white_top_small"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:alpha=".7"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_company"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:translationY="1dp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/companyNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satyam Home Care Services"
                    android:textSize="13sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/intersemibold"
                    android:textColor="@color/black1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/jobTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Satyam Home Care Services wants nannies and ward boys for patient care, housework and cooking."
                android:textSize="13sp"
                android:fontFamily="@font/intersemibold"
                android:textColor="@color/black1"/>

            <TextView
                android:id="@+id/jobLocationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hyderabad"
                android:layout_marginVertical="5dp"
                android:textSize="12sp"
                android:alpha=".4"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/black1"/>

            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9974231131"
                android:layout_marginVertical="2dp"
                android:textSize="14sp"
                android:alpha=".4"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/black1"/>

            <TextView
                android:id="@+id/salaryRangeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary Range: ₹18000 - ₹25000+"
                android:layout_marginVertical="10dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/black1"/>

            <TextView
                android:id="@+id/openingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:layout_marginVertical="5dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/green"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha=".7"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clock"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:translationY="1dp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/datePostedTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date Posted: 2023-01-01"
                    android:paddingStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="13sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/intersemibold"
                    android:textColor="@color/black1"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/SaveImageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bookmark"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:translationY="1dp"
                    android:clickable="true"
                    android:layout_marginHorizontal="10dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
