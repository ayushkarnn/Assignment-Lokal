<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/custom_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        android:gravity="center"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingBottom="5dp"
                android:background="@drawable/background_white_rounded_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:translationY="10dp"
                    android:paddingVertical="10dp">
                    <TextView
                        android:id="@+id/companyTitleDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/intersemibold"
                        android:textSize="16sp"
                        android:layout_marginTop="15dp"
                        android:text="Satyam Home Care Services wants nannies and ward boys for patient care, housework and cooking."
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:textColor="@color/black3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/intermedium"
                        android:textSize="13sp"
                        android:text="Next Followup Date 23-0302024"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:textColor="@color/black4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:translationX="-10dp"
                        android:src="@color/custom_background"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:alpha=".4"
                        android:layout_marginHorizontal="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/background_gray_dashed"
                        android:layout_weight="1"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:translationX="10dp"
                        android:src="@color/custom_background"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="Phone Number"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                            <TextView
                                android:id="@+id/phoneNumberDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="13sp"
                                android:text="9921342192"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:gravity="end"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="Place"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                            <TextView
                                android:id="@+id/placeDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="13sp"
                                android:text="Hyderabad"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="Job Type"
                                android:textAllCaps="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                            <TextView
                                android:id="@+id/jobTypeDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="13sp"
                                android:text="ఆఫీస్ జాబ్ "
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:visibility="gone"
                                android:textColor="@color/black4"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:gravity="end"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="Experience"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                            <TextView
                                android:id="@+id/experienceDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="13sp"
                                android:text="Less than 1 year"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="Qualification"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                            <TextView
                                android:id="@+id/qualificationDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="16sp"
                                android:text="Not Required"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/dateVacaniesDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/intersemibold"
                            android:textSize="12sp"
                            android:text="40 Vacancies"
                            android:textAllCaps="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp"
                            android:background="@drawable/green_shadow"
                            android:textColor="#0E56A8"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="Total Views"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                            <TextView
                                android:id="@+id/totalViewsDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="13sp"
                                android:text="25376"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:gravity="end"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="Total Share"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                            <TextView
                                android:id="@+id/shareDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="13sp"
                                android:text="0"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="13sp"
                                android:text="Salary"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                            <TextView
                                android:id="@+id/salaryDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text= "₹18000 - ₹25000+"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/black4"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/background_blue"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_clock"
                                app:civ_border_color="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingVertical="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intersemibold"
                                android:textSize="14sp"
                                android:text="Date Posted"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@color/black3"/>
                            <TextView
                                android:id="@+id/datePostedDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/intermedium"
                                android:textSize="12sp"
                                android:text="23-04-2024"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/red"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_check"
                android:padding="10dp"
                android:background="@drawable/background_circle_green"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/chatOnWhatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ripple_white_circle"
            android:layout_margin="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:alpha=".1"
                android:src="@color/black1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:src="@drawable/ic_whatsapp"/>
        </FrameLayout>

    </LinearLayout>

</ScrollView>